{
    "name": "strata/ui",
    "description": "A zero-config UI component library for Laravel with CSS variables and Tailwind CSS v4",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Strata Team"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "illuminate/support": "^12.0",
        "blade-ui-kit/blade-icons": "^1.5",
        "blade-ui-kit/blade-heroicons": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Strata\\UI\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Strata\\UI\\StrataServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "laravel/boost": "^1.0"
    }
}
